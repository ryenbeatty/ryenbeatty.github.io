{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["dist/"],
  "compilerOptions": {
    "types": ["vidstack/svelte"],
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "styles/*": ["src/styles/*"],
      "services/*": ["src/services/*"]
    }
  }
}
